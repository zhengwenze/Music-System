<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zwz.mod_music.mapper.MusicMapper">
    <!-- 实现分页查询音乐数据 -->
    <select id="searchMusic" resultType="org.zwz.mod_music.entity.Music">
        SELECT
            music.*,
            user.username as userName
        FROM
            music
        INNER JOIN user ON music.from_singer = user.id
        WHERE
            1=1
            AND music.activation = 0
            <if test="search != null and search != ''">
                AND music.music_name LIKE '%${search}%'
            </if>
            <if test="id != null">
                AND music.from_singer = #{id}
            </if>
    </select>
</mapper>